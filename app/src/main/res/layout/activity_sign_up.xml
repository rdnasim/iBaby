<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15sp"
    android:orientation="vertical"
    tools:context="com.example.rdnas.ibaby.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/login_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Log in"
            android:textColor="@color/colorPrimary"
            android:fontFamily="Bold"
            android:textSize="15sp"
            android:onClick="loginRegister"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track your baby's development"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#d65028"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get expert guidance from the world's #1 pregnancy and parenting resource, delivered via email, our apps, and website."
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edtEmailAddressLog"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:hint="  Email Address :"/>
    <EditText
        android:id="@+id/edtPasswordLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="  Password :"/>
    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Full Name:"
        android:inputType="textPersonName"/>
    <EditText
        android:inputType="textPersonName"
        android:id="@+id/edtCommunityname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Community Username :"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/colorPrimary">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Due Date or child Birth Click Here"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:onClick="setDate"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/showDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#f9fafa"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:textSize="15sp"/>

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trying_to_conceive"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_day_of_your_last_period"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Select Date"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:onClick="setDate2"/>
        <TextView
            android:id="@+id/showDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="20sp"/>
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Receive FREE or discounted products and offers from BabyCenterâ€™s trusted partners"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:background="#28185b"
        android:textColor="#fff"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:onClick="onClickRegister"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy | Terms"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"/>



</LinearLayout>
