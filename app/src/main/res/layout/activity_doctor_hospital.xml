<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DoctorHospital.DoctorHospitalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Are you searching e-Doctor ?"
        android:textSize="25dp" />

    <Button
        android:id="@+id/eDoctorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_gory"
        android:gravity="center"
        android:text="e-Doctor"
        android:textSize="20dp"
        android:onClick="onClickeDoctor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Are you searching e-Hospital ?"
        android:textSize="25dp" />

    <Button
        android:id="@+id/eHospitalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_gory"
        android:gravity="center"
        android:text="e-Hospital"
        android:textSize="20dp"
        android:onClick="onClickeHospital"/>

</LinearLayout>